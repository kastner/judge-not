<h1>Judge Signup Form</h1>
<% @judge.password = @judge.password_confirmation = nil %>

<%= error_messages_for :judge %>
<% form_for :judge, :url => judges_path do |f| -%>
<div>
  <%= f.label :username %>
  <%= f.text_field :username %>
</div>

<div>
  <%= f.label :email %>
  <%= f.text_field :email %>
</div>

<div>
  <%= f.label :password %>
  <%= f.password_field :password %>
</div>

<div>
  <%= f.label :password_confirmation, "Confirm" %>
  <%= f.password_field :password_confirmation %>
</div>

<div>
  <%= f.submit 'Sign up' %>
</div>

<% end -%>
