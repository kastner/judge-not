<h1>Judge's Sign in</h1>

<% form_tag session_path do -%>
<div>
  <%= label_tag :username %>
  <%= text_field_tag :username %>
</div>

<div>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
</div>

<div class="check-box">
  <%= label_tag :remember_me, "Stay logged in" %>
  <%= check_box_tag :remember_me, 1, @remember_me %>
</div>

<div>
  <%= submit_tag "Log In" %>
</div>
<% end -%>
